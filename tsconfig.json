{
  "compilerOptions": {
    "target": "es6",
    "outDir": "dist",
    "noImplicitAny": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": false,
    "plugins": [
      {
        "transform": "typescript-is/lib/transform-inline/transformer"
      },
      {
        "transform": "@specifyapp/get-expectation/dist/transform",
        "fnName": "getTypeExpectation"
      }
    ]
  },
  "include": ["parsers"],
  "exclude": ["./dist", "node_modules","parsers/**/*.spec.ts"]
}
